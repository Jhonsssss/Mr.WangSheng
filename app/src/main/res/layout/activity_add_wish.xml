<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/iv_close"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"
            android:layout_marginLeft="10dp"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="许愿"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textSize="16sp"

            />



    </RelativeLayout>


    
    
    <RelativeLayout
        android:id="@+id/rl_add_wish"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_height="35dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/line"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/tv_hope"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:hint="输入您的心愿吧"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textSize="12sp"
            />


        <TextView
            android:id="@+id/tv_count"
            android:layout_marginRight="5dp"
            android:text="0/20"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>





    <LinearLayout
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="by:"
            android:textSize="12sp"
            android:gravity="right"
            android:textColor="@color/black"
            />
        <EditText
            android:id="@+id/et_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:hint="你的名字"
            android:gravity="left"
            android:layout_marginLeft="5dp"
            android:imeOptions="actionDone"
            android:layout_marginRight="20dp"
            android:background="@color/transparent"
            android:textColor="@color/black"
            android:maxLines="1"
            android:maxLength="20"
            />
    </LinearLayout>



    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:textColor="@color/black"
        android:text="设置心愿期限"
        android:textSize="12sp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/tv_hope_time"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/shape_riqi_shijian"
        android:textColor="@color/black"
        android:text="点击设置"
        android:textSize="12sp"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="36dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="选择心愿样式"
            android:layout_centerInParent="true"
            android:textSize="12sp"
            android:gravity="center"
            />

        <View
            android:layout_marginStart="10dp"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:background="@drawable/circle_pink"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_add_type"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/shape_riqi_shijian"
        android:textColor="@color/black"
        android:text="默认样式"
        android:textSize="12sp"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="36dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="选择心愿背景"
            android:layout_centerInParent="true"
            android:textSize="12sp"
            android:gravity="center"
            />

        <View
            android:layout_marginStart="10dp"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:background="@drawable/circle_pink"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_choose_bg"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/shape_riqi_shijian"
        android:textColor="@color/black"
        android:text="默认背景"
        android:textSize="12sp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/tv_add"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/shape_riqi_jisuan"
        android:textColor="@color/white"
        android:text="完成并添加"
        android:textSize="12sp"
        android:gravity="center"
        />

</LinearLayout>