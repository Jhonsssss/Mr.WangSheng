<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_alpha_6"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:src="@mipmap/back" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16sp"

            />

        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/bianji_icon" />

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.joooonho.SelectableRoundedImageView

                    android:layout_alignTop="@id/ll_content"
                    android:background="@color/white"
                    android:layout_alignBottom="@id/ll_content"
                    android:id="@+id/tv_hope_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:sriv_oval="false" />



                <LinearLayout
                    android:id="@+id/ll_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv_wish_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="50dp"
                        android:text="写一本书"
                        android:textColor="@color/black"
                        android:textSize="20sp"

                        />


                    <TextView
                        android:id="@+id/tv_wish_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="55dp"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:text="心愿期限:2019-10-09"
                        android:textColor="@color/black"
                        android:textSize="12sp" />



                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="13dp"
                        android:id="@+id/tv_wish_time_finished"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:background="@drawable/bg_text_red"
                        android:gravity="center"
                        android:paddingRight="5dp"
                        android:paddingStart="5dp"
                        android:text="2019-10-09"
                        android:textColor="#FA3773"
                        android:textSize="14sp"
                        />



                    <TextView
                        android:layout_marginTop="120dp"
                        android:layout_marginRight="25dp"
                        android:id="@+id/tv_wish_current_date"
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:background="@drawable/bg_text"
                        android:padding="5dp"
                        android:gravity="center"
                        android:layout_gravity="right"
                        android:text="2019-04-19"
                        android:textColor="#6C6C6C"
                        android:textSize="12sp"
                        android:textStyle="italic" />

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal">




                        <TextView

                            android:layout_marginLeft="25dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#6C6C6C"
                            android:text="by:"
                            android:textSize="14sp"
                            android:gravity="right"
                            />

                        <TextView
                            android:id="@+id/tv_wish_user"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="7787878"
                            android:textSize="14sp"
                            android:layout_marginRight="25dp"
                            />


                    </LinearLayout>







                </LinearLayout>




                <ImageView
                    android:id="@+id/iv_wish_finish"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_alignRight="@id/ll_content"
                    android:layout_alignBottom="@id/ll_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/yiruyuan_icon_xiangqingye"
                    />




            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    />

                <TextView
                    android:id="@+id/tv_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击已如愿"
                    android:textSize="14sp"
                    android:textColor="@color/black" />


            </LinearLayout>



        </LinearLayout>

    </ScrollView>



</LinearLayout>