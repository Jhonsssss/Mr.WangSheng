<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_alpha_6"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:padding="@dimen/x10"
            android:src="@mipmap/back" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/x16"

            />

        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x10"
            android:src="@mipmap/bianji_icon" />

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_marginTop="@dimen/x10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <LinearLayout
                    android:id="@+id/ll_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginRight="@dimen/x20"
                    android:background="@mipmap/bg_type3"
                    android:orientation="vertical">



                    <com.joooonho.SelectableRoundedImageView
                      android:layout_marginRight="@dimen/x10"
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_marginTop="@dimen/x70"
                        android:id="@+id/tv_hope_bg"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x200"
                        android:scaleType="centerCrop"
                        app:sriv_oval="false" />


                    <TextView
                        android:id="@+id/tv_wish_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x25"
                        android:layout_marginTop="@dimen/x20"
                        android:text="写一本书"
                        android:textColor="@color/black"
                        android:textSize="@dimen/x20"

                        />


                    <LinearLayout
                        android:layout_marginTop="@dimen/x35"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/tv_wish_time"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x25"
                            android:gravity="left"
                            android:text="心愿期限:2019-10-09"
                            android:textColor="@color/black"
                            android:textSize="@dimen/x14" />

                        <TextView
                            android:layout_marginRight="@dimen/x25"
                            android:id="@+id/tv_wish_current_date"
                            android:layout_width="wrap_content"
                            android:paddingLeft="@dimen/x5"
                            android:paddingRight="@dimen/x5"
                            android:layout_height="@dimen/x25"
                            android:layout_marginLeft="@dimen/x20"
                            android:background="@drawable/bg_text"
                            android:gravity="center"
                            android:text="2019-10-09"
                            android:textColor="#6C6C6C"
                            android:textSize="@dimen/x14"
                            android:textStyle="italic" />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/x20"
                        android:layout_marginTop="@dimen/x30"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_wish_time_finished"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/x25"
                            android:layout_marginLeft="@dimen/x25"
                            android:background="@drawable/bg_text_red"
                            android:gravity="center"
                            android:paddingRight="@dimen/x5"
                            android:paddingStart="@dimen/x5"
                            android:text="2019-10-09"
                            android:textColor="#FA3773"
                            android:textSize="@dimen/x14"
                            />


                        <TextView

                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="#6C6C6C"
                            android:text="by:"
                            android:textSize="@dimen/x14"
                            android:gravity="right"
                            />

                        <TextView
                            android:id="@+id/tv_wish_user"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="7787878"
                            android:textSize="@dimen/x14"
                            android:layout_marginRight="@dimen/x25"
                            />
                    </LinearLayout>



                </LinearLayout>


                <ImageView
                    android:layout_alignEnd="@id/ll_content"
                    android:layout_alignBottom="@id/ll_content"
                    android:id="@+id/iv_wish_finish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/yiruyuan_icon_xiangqingye"
                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x20"
                android:layout_marginBottom="@dimen/x30"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    />

                <TextView
                    android:id="@+id/tv_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击已如愿"
                    android:textSize="@dimen/x14"
                    android:textColor="@color/black" />


            </LinearLayout>



        </LinearLayout>

    </ScrollView>



</LinearLayout>