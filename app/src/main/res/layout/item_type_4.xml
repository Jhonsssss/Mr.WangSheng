<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_alignTop="@id/ll_content"
            android:layout_alignBottom="@id/ll_content"
            android:id="@+id/tv_hope_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/type4_bg1_"
            />



        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_wish_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:text="定个小目标，先赚它一个亿"
                android:textColor="@color/black"
                android:textSize="20sp"

                />


            <TextView
                android:id="@+id/tv_wish_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:text="心愿期限:2019-10-09"
                android:textColor="@color/black"
                android:textSize="12sp" />



            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="13dp"
                android:id="@+id/tv_wish_time_finished"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@drawable/bg_text_red"
                android:gravity="center"
                android:paddingRight="5dp"
                android:paddingStart="5dp"
                android:text="还剩下200天"
                android:textColor="#FA3773"
                android:textSize="14sp"
                />



            <TextView
                android:layout_marginTop="120dp"
                android:layout_marginRight="25dp"
                android:id="@+id/tv_wish_current_date"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:background="@drawable/bg_text"
                android:padding="5dp"
                android:gravity="center"
                android:layout_gravity="right"
                android:text="2019-04-19"
                android:textColor="#6C6C6C"
                android:textSize="12sp"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginBottom="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">




                <TextView

                    android:layout_marginLeft="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#6C6C6C"
                    android:text="by:"
                    android:textSize="14sp"
                    android:gravity="right"
                    />

                <TextView
                    android:id="@+id/tv_wish_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Ms.Mary"
                    android:textSize="14sp"
                    android:layout_marginRight="25dp"
                    />


            </LinearLayout>







        </LinearLayout>







    </RelativeLayout>
</LinearLayout>