<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginBottom="@dimen/x30"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:orientation="vertical">




            <LinearLayout
                android:layout_marginTop="@dimen/x20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">




                <TextView

                    android:layout_marginLeft="@dimen/x25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#6C6C6C"
                    android:text="by:"
                    android:textSize="@dimen/x14"
                    android:gravity="right"
                    />

                <TextView
                    android:id="@+id/tv_wish_user"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Ms.Mary"
                    android:textSize="@dimen/x14"
                    android:layout_marginRight="@dimen/x20"
                    />

                <TextView
                    android:layout_marginRight="@dimen/x20"
                    android:id="@+id/tv_wish_current_date"
                    android:layout_width="@dimen/x70"
                    android:layout_height="@dimen/x25"
                    android:background="@drawable/bg_text"
                    android:padding="@dimen/x5"
                    android:gravity="center"
                    android:text="2019-04-19"
                    android:textColor="#6C6C6C"
                    android:textSize="@dimen/x12"
                    android:textStyle="italic" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_wish_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/x25"
                android:layout_marginTop="@dimen/x20"
                android:text="定个小目标，先赚它一个亿"
                android:textColor="@color/black"
                android:textSize="@dimen/x20"

                />

            <TextView
                android:id="@+id/tv_wish_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x35"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:text="心愿期限:2019-10-09"
                android:textColor="@color/black"
                android:textSize="@dimen/x12" />



            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/x20"
                android:layout_marginTop="@dimen/x20"
                android:id="@+id/tv_wish_time_finished"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x25"
                android:background="@drawable/bg_text_red"
                android:gravity="center"
                android:paddingRight="@dimen/x5"
                android:paddingStart="@dimen/x5"
                android:text="还剩下200天"
                android:textColor="#FA3773"
                android:textSize="@dimen/x14"
                />



            <ImageView
                android:id="@+id/tv_hope_bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x215"
                android:scaleType="centerCrop"
                app:srcCompat="@mipmap/type2_bg1_"
                 />
        </LinearLayout>






</LinearLayout>