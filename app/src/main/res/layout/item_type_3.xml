<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:background="@mipmap/bg_type3"
            android:orientation="vertical">



            <ImageView
                android:layout_marginRight="@dimen/x10"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginTop="@dimen/x70"
                android:id="@+id/tv_hope_bg"
                android:layout_width="match_parent"
                app:srcCompat="@mipmap/type3_bg2_"
                android:layout_height="@dimen/x200"
                android:scaleType="centerCrop"
              />


            <TextView
                android:id="@+id/tv_wish_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x25"
                android:layout_marginTop="@dimen/x20"
                android:text="定个小目标，先赚它一个亿"
                android:textColor="@color/black"
                android:textSize="@dimen/x20"

                />


            <LinearLayout
                android:layout_marginTop="@dimen/x35"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_wish_time"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x25"
                    android:gravity="left"
                    android:text="心愿期限:2019-10-09"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x14" />

                <TextView
                    android:layout_marginRight="@dimen/x25"
                    android:id="@+id/tv_wish_current_date"
                    android:layout_width="wrap_content"
                    android:paddingLeft="@dimen/x5"
                    android:paddingRight="@dimen/x5"
                    android:layout_height="@dimen/x25"
                    android:layout_marginLeft="@dimen/x20"
                    android:background="@drawable/bg_text"
                    android:gravity="center"
                    android:text="2019-10-09"
                    android:textColor="#6C6C6C"
                    android:textSize="@dimen/x14"
                    android:textStyle="italic" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x20"
                android:layout_marginTop="@dimen/x30"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_wish_time_finished"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/x25"
                    android:layout_marginLeft="@dimen/x25"
                    android:background="@drawable/bg_text_red"
                    android:gravity="center"
                    android:paddingRight="@dimen/x5"
                    android:paddingStart="@dimen/x5"
                    android:text="还剩下200天"
                    android:textColor="#FA3773"
                    android:textSize="@dimen/x14"
                    />


                <TextView

                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#6C6C6C"
                    android:text="by:"
                    android:textSize="@dimen/x14"
                    android:gravity="right"
                    />

                <TextView
                    android:id="@+id/tv_wish_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Ms.Mary"
                    android:textSize="@dimen/x14"
                    android:layout_marginRight="@dimen/x25"
                    />
            </LinearLayout>



        </LinearLayout>



</LinearLayout>